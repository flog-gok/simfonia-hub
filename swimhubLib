-- CoreGui Cheat UI Library
-- A UI library for Roblox cheats, styled like CoreGui with keybind and color picker, optimized with tables

local CoreGuiCheatLibrary = {}
local UserInputService = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- Create a new UI instance in CoreGui
function CoreGuiCheatLibrary:CreateUI(title)
    local ui = {
        elements = {}, -- Table to store UI elements
        keybind = nil, -- Store keybind
        dragging = false,
        dragInput = nil,
        dragStart = nil,
        startPos = nil
    }

    -- ScreenGui
    ui.elements.screenGui = Instance.new("ScreenGui")
    ui.elements.screenGui.Name = "CheatCoreUI"
    ui.elements.screenGui.Parent = CoreGui
    ui.elements.screenGui.ResetOnSpawn = false
    ui.elements.screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

    -- Main Frame
    ui.elements.mainFrame = Instance.new("Frame")
    ui.elements.mainFrame.Size = UDim2.new(0, 800, 0, 500)
    ui.elements.mainFrame.Position = UDim2.new(0.5, -400, 0.5, -250)
    ui.elements.mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    ui.elements.mainFrame.BackgroundTransparency = 0.2
    ui.elements.mainFrame.BorderSizePixel = 0
    ui.elements.mainFrame.ClipsDescendants = true
    ui.elements.mainFrame.Parent = ui.elements.screenGui
    ui.elements.mainFrame.Visible = false

    ui.elements.mainFrameCorner = Instance.new("UICorner")
    ui.elements.mainFrameCorner.CornerRadius = UDim.new(0, 8)
    ui.elements.mainFrameCorner.Parent = ui.elements.mainFrame

    -- Title Bar
    ui.elements.titleBar = Instance.new("Frame")
    ui.elements.titleBar.Size = UDim2.new(1, 0, 0, 30)
    ui.elements.titleBar.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
    ui.elements.titleBar.BackgroundTransparency = 0.1
    ui.elements.titleBar.BorderSizePixel = 0
    ui.elements.titleBar.Parent = ui.elements.mainFrame

    ui.elements.titleBarCorner = Instance.new("UICorner")
    ui.elements.titleBarCorner.CornerRadius = UDim.new(0, 8)
    ui.elements.titleBarCorner.Parent = ui.elements.titleBar

    ui.elements.titleLabel = Instance.new("TextLabel")
    ui.elements.titleLabel.Size = UDim2.new(1, -10, 1, 0)
    ui.elements.titleLabel.Position = UDim2.new(0, 5, 0, 0)
    ui.elements.titleLabel.Text = title or "Cheat Menu"
    ui.elements.titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    ui.elements.titleLabel.BackgroundTransparency = 1
    ui.elements.titleLabel.TextScaled = true
    ui.elements.titleLabel.Font = Enum.Font.GothamBold
    ui.elements.titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    ui.elements.titleLabel.Parent = ui.elements.titleBar

    -- Content Area
    ui.elements.contentFrame = Instance.new("Frame")
    ui.elements.contentFrame.Size = UDim2.new(1, 0, 1, -30)
    ui.elements.contentFrame.Position = UDim2.new(0, 0, 0, 30)
    ui.elements.contentFrame.BackgroundTransparency = 1
    ui.elements.contentFrame.Parent = ui.elements.mainFrame

    ui.elements.uiListLayout = Instance.new("UIListLayout")
    ui.elements.uiListLayout.Padding = UDim.new(0, 5)
    ui.elements.uiListLayout.SortOrder = Enum.SortOrder.LayoutOrder
    ui.elements.uiListLayout.Parent = ui.elements.contentFrame

    ui.elements.uiPadding = Instance.new("UIPadding")
    ui.elements.uiPadding.PaddingLeft = UDim.new(0, 10)
    ui.elements.uiPadding.PaddingRight = UDim.new(0, 10)
    ui.elements.uiPadding.PaddingTop = UDim.new(0, 10)
    ui.elements.uiPadding.Parent = ui.elements.contentFrame

    -- Dragging functionality
    local function updateInput(input)
        local delta = input.Position - ui.dragStart
        ui.elements.mainFrame.Position = UDim2.new(ui.startPos.X.Scale, ui.startPos.X.Offset + delta.X, ui.startPos.Y.Scale, ui.startPos.Y.Offset + delta.Y)
    end

    ui.elements.titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            ui.dragging = true
            ui.dragStart = input.Position
            ui.startPos = ui.elements.mainFrame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    ui.dragging = false
                end
            end)
        end
    end)

    ui.elements.titleBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and ui.dragging then
            ui.dragInput = input
        end
    end)

    UserInputService.InputChanged:Connect(function(input)
        if input == ui.dragInput and ui.dragging then
            updateInput(input)
        end
    end)

    -- Keybind functionality
    local function toggleUI()
        ui.elements.mainFrame.Visible = not ui.elements.mainFrame.Visible
    end

    UserInputService.InputBegan:Connect(function(input, gameProcessed)
        if not gameProcessed and ui.keybind and input.KeyCode == ui.keybind then
            toggleUI()
        end
    end)

    -- UI Methods
    local uiInstance = {}

    -- Set Keybind
    function uiInstance:SetKeybind(keyCode)
        ui.keybind = keyCode
    end

    -- Add Button
    function uiInstance:AddButton(text, callback)
        local button = Instance.new("TextButton")
        button.Size = UDim2.new(1, 0, 0, 40)
        button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        button.BackgroundTransparency = 0.3
        button.Text = text or "Button"
        button.TextColor3 = Color3.fromRGB(255, 255, 255)
        button.TextScaled = true
        button.Font = Enum.Font.Gotham
        button.BorderSizePixel = 0
        button.Parent = ui.elements.contentFrame

        local buttonCorner = Instance.new("UICorner")
        buttonCorner.CornerRadius = UDim.new(0, 6)
        buttonCorner.Parent = button

        button.MouseEnter:Connect(function()
            button.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
        end)

        button.MouseLeave:Connect(function()
            button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        end)

        button.MouseButton1Click:Connect(function()
            if callback then
                callback()
            end
        end)

        return button
    end

    -- Add Label
    function uiInstance:AddLabel(text)
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, 0, 0, 30)
        label.BackgroundTransparency = 1
        label.Text = text or "Label"
        label.TextColor3 = Color3.fromRGB(200, 200, 200)
        label.TextScaled = true
        label.Font = Enum.Font.Gotham
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = ui.elements.contentFrame

        return label
    end

    -- Add ColorPicker
    function uiInstance:AddColorPicker(labelText, defaultColor, callback)
        local colorPickerFrame = Instance.new("Frame")
        colorPickerFrame.Size = UDim2.new(1, 0, 0, 50)
        colorPickerFrame.BackgroundTransparency = 1
        colorPickerFrame.Parent = ui.elements.contentFrame

        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(0.4, 0, 0, 30)
        label.BackgroundTransparency = 1
        label.Text = labelText or "Color Picker"
        label.TextColor3 = Color3.fromRGB(200, 200, 200)
        label.TextScaled = true
        label.Font = Enum.Font.Gotham
        label.TextXAlignment = Enum.TextXAlignment.Left
        label.Parent = colorPickerFrame

        local rgbInput = Instance.new("TextBox")
        rgbInput.Size = UDim2.new(0.4, 0, 0, 30)
        rgbInput.Position = UDim2.new(0.4, 5, 0, 0)
        rgbInput.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        rgbInput.BackgroundTransparency = 0.3
        rgbInput.Text = string.format("%d, %d, %d", defaultColor.R * 255, defaultColor.G * 255, defaultColor.B * 255)
        rgbInput.TextColor3 = Color3.fromRGB(255, 255, 255)
        rgbInput.TextScaled = true
        rgbInput.Font = Enum.Font.Gotham
        rgbInput.Parent = colorPickerFrame

        local rgbInputCorner = Instance.new("UICorner")
        rgbInputCorner.CornerRadius = UDim.new(0, 6)
        rgbInputCorner.Parent = rgbInput

        local confirmButton = Instance.new("TextButton")
        confirmButton.Size = UDim2.new(0.15, 0, 0, 30)
        confirmButton.Position = UDim2.new(0.85, 5, 0, 0)
        confirmButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        confirmButton.BackgroundTransparency = 0.3
        confirmButton.Text = "Set"
        confirmButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        confirmButton.TextScaled = true
        confirmButton.Font = Enum.Font.Gotham
        confirmButton.Parent = colorPickerFrame

        local confirmButtonCorner = Instance.new("UICorner")
        confirmButtonCorner.CornerRadius = UDim.new(0, 6)
        confirmButtonCorner.Parent = confirmButton

        confirmButton.MouseEnter:Connect(function()
            confirmButton.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
        end)

        confirmButton.MouseLeave:Connect(function()
            confirmButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        end)

        confirmButton.MouseButton1Click:Connect(function()
            local r, g, b = rgbInput.Text:match("(%d+), (%d+), (%d+)")
            if r and g and b then
                r, g, b = tonumber(r), tonumber(g), tonumber(b)
                if r >= 0 and r <= 255 and g >= 0 and g <= 255 and b >= 0 and b <= 255 then
                    local newColor = Color3.fromRGB(r, g, b)
                    if callback then
                        callback(newColor)
                    end
                end
            end
        end)

        return colorPickerFrame
    end

    return uiInstance
end

return CoreGuiCheatLibrary
